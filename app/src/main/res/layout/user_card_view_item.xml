<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        card_view:cardElevation="0.01dp"
        android:layout_marginBottom="0dp">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="338dp">

            <ImageView
                android:id="@+id/gravatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:src="@drawable/badge_circle_icon"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/gravatar"
                android:layout_marginStart="26dp"
                android:layout_toEndOf="@id/gravatar"
                android:layout_marginLeft="10dp"
                android:text="Username" />

            <ImageView
                android:id="@+id/bronze_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_alignStart="@id/username"
                android:layout_marginTop="10dp"
                android:src="@drawable/badge_circle_icon"
                android:tint="@color/bronze" />

            <TextView
                android:id="@+id/bronze_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/bronze_icon"
                android:text="198273" />

            <ImageView
                android:id="@+id/silver_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/bronze_amount"
                android:src="@drawable/badge_circle_icon"
                android:tint="@color/silver" />

            <TextView
                android:id="@+id/silver_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/silver_icon"
                android:text="213" />

            <ImageView
                android:id="@+id/gold_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/silver_amount"
                android:src="@drawable/badge_circle_icon"
                android:tint="@color/gold" />

            <TextView
                android:id="@+id/gold_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/username"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/gold_icon"
                android:text="87" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>